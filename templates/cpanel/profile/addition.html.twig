{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}User profile{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <div class="row">
            <div class="col">
                <!-- Сообщение об ошибке -->
                {% for label, messages in app.session.flashBag.all %}
                    <div class="alert alert-primary alert-dismissible fade show mt-4" role="alert">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endfor %}
                <div class="card card-small p-1 mt-4 mb-5">
                    <div class="card-body p-0 p-3">
                        <h5 class="text-center">{% trans %}Fill in all fields to get full access{% endtrans %}</h5>
                        <hr>
                        {{ form_start(form) }}
                        <div>
                            {{ form_row(form.age) }}
                            {{ form_row(form.location) }}
                            {{ form_row(form.lang) }}
                        </div>
                        <div>
                            {{ form_row(form.image) }}
                        </div>
                        <div>
                            {{ form_row(form.description) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary mt-3">{% trans %}Update{% endtrans %}</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
