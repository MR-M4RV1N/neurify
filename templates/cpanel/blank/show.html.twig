{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}Blank{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <div class="card card-small p-1 mt-4">
            <div class="card-header border-bottom">
                <h6 class="m-0 text-center">{{ blank.title }}</h6>
            </div>
            <div class="card-body">
                <div class="col col-md-4 mx-auto text-center">
                    <img class="img-fluid rounded" src="/cpanel/images/blanks/{{ blank.image }}">
                </div>

                <div class="col col-md-6 mx-auto mt-3">
                    <p class="text-justify devstyle-text-indent">{{ blank.description }}</p>
                </div>

                <div class="col col-md-6 mx-auto border-top pt-3">
                    <div class="d-flex">
                        <a href="{{ path('app_blank_index', {'id': 1}) }}" class="btn btn-sm btn-outline-secondary"><i class="material-icons">arrow_back</i> {% trans %}Back{% endtrans %}</a>

                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_blank_edit', {'id': blank.id}) }}" class="btn btn-sm btn-outline-primary ml-2"><i class="material-icons">edit</i> {% trans %}Edit{% endtrans %}</a>
                        {% endif %}

                        <form action="{{ path('app_blank_complete', {'id': blank.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to complete this item?');">
                            <button type="submit" class="btn btn-sm btn-outline-primary ml-2"><i class="material-icons">done</i> {% trans %}Complete{% endtrans %}</button>
                        </form>
                    </div>

                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="text-right">
                        {{ include('cpanel/blank/_delete_form.html.twig') }}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
