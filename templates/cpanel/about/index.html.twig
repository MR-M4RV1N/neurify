{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}В разработке{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <div class="row">
            <div class="col">
                <div class="card card-small p-1 mt-4 mb-5">
                    <div class="card-header border-bottom">
                        <h6 class="m-0 text-center">{% trans %}What is neuroplasticity?{% endtrans %}</h6>
                    </div>
                    <div class="card-body">
                        <div class="col col-md-6 mx-auto text-center mt-3">
                            <img src="/images/about_neurify.png" class="img-fluid w-50" alt="Responsive image">
                        </div>
                        <div class="col col-md-6 mx-auto text-justify mt-3">
                            <p class="devstyle-text-indent">
                                {{ neuroplasticity }}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card card-small p-1 mt-4 mb-5">
                    <div class="card-header border-bottom">
                        <h6 class="m-0 text-center">{% trans %}Results{% endtrans %}</h6>
                    </div>
                    <div class="card-body">
                        <div class="col col-md-6 mx-auto text-center mt-3">
                            <img src="/images/about_neurify_results.png" class="img-fluid w-50" alt="Responsive image">
                        </div>
                        <div class="col col-md-6 mx-auto text-justify mt-3">
                            {{ results|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
