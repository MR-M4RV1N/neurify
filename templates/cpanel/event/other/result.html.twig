{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}В разработке{% endblock %}

{% block body %}
<div class="main-content-container container-fluid">
    <div class="row">
        <div class="col">
            <div class="card card-small p-1 mt-4">
                <div class="card-header border-bottom">
                    <h6 class="m-0 text-center">{% trans %}Result{% endtrans %}</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <div class="col-xl-6 col-lg-8 col-md-12 col-sm-12 mt-4 mb-4" style="padding-right: 0px; padding-left:0px">
                            <p class="text-justify">
                                {{ items[0]['text']|raw }} <a href="{{ path('app_events_by_id', {'id': category.id}) }}">{{ category.title }}</a>
                            </p>
                            <div class="text-center mb-5">
                                <img src="/images/congratulation.jpg" class="img-fluid rounded" alt="Responsive image">
                            </div>

                            <div class="text-center mt-5">
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal"><i class="fa fa-print" aria-hidden="true"></i> {% trans %}Print{% endtrans %}</button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                {% trans %}Functionality in development...{% endtrans %}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-5">
                                {{ items[1]['text']|raw }}

                                <p class="text-justify">
                                    {{ items[2]['text']|raw }}
                                </p>
                            </div>
                            <div class="text-center">
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#confirmModal">
                                    <i class="fa fa-forward" aria-hidden="true"></i> {% trans %}Continue{% endtrans %}
                                </button>

                                <!-- Модальное окно Bootstrap для подтверждения -->
                                <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">{% trans %}Confirmation{% endtrans %}</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                {{ items[3]['text'] }}
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
                                                <form action="{{ path('app_category_continue') }}" method="post">
                                                    <button type="submit" class="btn btn-primary">{% trans %}Continue{% endtrans %}</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
