{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <!-- Page Header -->
        <div class="page-header row no-gutters py-4">
            <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">Sadaļa</span>
                <h3 class="page-title mb-2">Publiskie ieraksti</h3>
            </div>
        </div>
        <div class="row px-2">
            {% for event in events %}
                <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                    <div class="card card-small card-post card-post--1">
                        <div class="card-post__image"
                             style="background-image: url('/images/uploads/{{ event.image }}');">
                            <div class="card-post__author d-flex">
                                <a href="{{ path('app_public_user', {'id': event.user.id}) }}" class="card-post__author-avatar card-post__author-avatar--small" style="background-image: url('/cpanel/images/avatars/user-icon.jpg');">Written by Anna Kunis</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a class="text-fiord-blue" href="{{ path('app_public_show', {'id': event.id}) }}">{{ event.title }}</a>
                            </h5>
                            <p class="card-text">

                            </p>
                        </div>
                        <div class="card-footer text-muted border-top py-3">
                            <span>Autors: {{ event.user.username }}</span>
                        </div>
                    </div>
                </div>
            {% else %}
                <div>Nav neviena ieraksta. Jūs varat izmantot sadaļu "Padomi" ja Jums vajag atrast ideju.</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
