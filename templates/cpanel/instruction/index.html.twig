{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}В разработке{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <div class="row">
            <div class="col mb-5">
                {% for i in item %}
                <div class="card card-small p-1 mt-4">
                    <div class="card-header border-bottom">
                        <h6 class="m-0 text-center">{% trans %}Point{% endtrans %} {{ loop.index }}</h6>
                    </div>
                    <div class="card-body">
                        <div class="col col-md-6 mx-auto text-justify mt-3">
                            <p class="devstyle-text-indent">
                                {{ i.text }}
                            </p>
                        </div>
                        <div class="col col-md-6 mx-auto text-center mt-3">
                            <img src="/images/EX{{ loop.index }}.jpg" class="img-fluid w-50 border border-secondary" alt="Responsive image">
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
