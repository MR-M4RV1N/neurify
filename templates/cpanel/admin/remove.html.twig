{% extends 'cpanel/_layouts/app.html.twig' %}

{% block title %}В разработке{% endblock %}

{% block body %}
    <div class="main-content-container container-fluid">
        <!-- Page Header -->
        <div class="page-header row no-gutters pt-4 pl-4 pr-4">
            <div class="col-12 col-sm-4 text-center text-sm-left mb-0">
                <span class="text-uppercase page-subtitle">
                    {% trans %}Admin panel{% endtrans %}
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="card card-small p-1 mt-4 mb-1">
                    <div class="card-header border-bottom">
                        <h6 class="m-0 text-center">{% trans %}Last 5{% endtrans %}</h6>
                    </div>
                    <div class="card-body p-0 pb-3 text-center">
                        <table class="table mb-0">
                            <thead class="bg-light">
                            <tr>
                                <th scope="col" class="border-0">#</th>
                                <th scope="col" class="border-0 text-left">{% trans %}User{% endtrans %}</th>
                                <th scope="col" class="border-0"><i class="material-icons">action</i></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in userData %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td class="text-left">{{ user.username }}</td>
                                    <td>
                                        <form action="{{ path('cpanel_admin_remove', {'id': user.id}) }}" method="post">
                                            <input type="hidden" name="id" value="{{ user.id }}">
                                            <button type="submit" class="btn btn-sm btn-pill btn-outline-danger mr-2">
                                                <i class="material-icons">delete</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
